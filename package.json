{
  "name": "@hidoo/unit-sass-monorepo",
  "version": "0.0.0",
  "description": "Monorepo for unit-sass packages",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "dev:start": "lerna exec 'yarn start' --ignore @hidoo/unit-test-util --ignore @hidoo/stylelint-config",
    "dev:test": "lerna exec 'yarn test --watch' --no-private --ignore @hidoo/unit-test-util",
    "test": "npm-run-all -s test:lint test:packages",
    "test:lint": "npm-run-all -p test:lint:*",
    "test:lint:js": "eslint .",
    "test:lint:scss": "stylelint ./**/*.scss --syntax scss",
    "test:packages": "lerna run test --no-private"
  },
  "author": "hidoo",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@hidoo/eslint-config": "^0.1.4",
    "babel-eslint": "^10.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^6.0.1",
    "husky": "^3.0.0",
    "lerna": "^3.15.0",
    "lint-staged": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "stylelint": "^10.1.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
