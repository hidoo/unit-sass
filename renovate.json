{
  "extends": [
    "config:base"
  ],
  "timezone": "Asia/Tokyo",
  "labels": [
    "renovate"
  ],
  "schedule": [
    "every weekend"
  ],
  "patch": {
    "automerge": true
  },
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "gulp-project monorepo packages",
      "groupSlug": "gulp-project",
      "packagePatterns": [
        "^@hidoo/gulp-plugin-",
        "^@hidoo/gulp-project-",
        "^@hidoo/gulp-task-",
        "^@hidoo/gulp-util-",
        "^@hidoo/util-fancy-print",
        "^@hidoo/util-local-ip",
        "^@hidoo/util-merge-babelrc"
      ],
      "automerge": true
    },
    {
      "groupName": "handlebars-lib monorepo packages",
      "groupSlug": "handlebars-lib",
      "packagePatterns": [
        "@hidoo/express-engine-handlebars",
        "^@hidoo/handlebars-"
      ],
      "automerge": true
    }
  ]
}
